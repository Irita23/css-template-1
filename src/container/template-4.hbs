<header class="header">
	<div>
		{{> logo}}
	</div>
	<nav class="header_nav">
		<div class="header_nav_right">
			{{>nav list=header}}
		</div>
	</nav>
</header>

<div class="main">

	{{#with main}}
	<img src="{{image}}" alt="main image" class="main_image">
	<div class="main_content">
		<div class="main_heading">{{heading}}</div>
		<div class="main_description">{{description}}</div>

		<button class="main_button">{{button}}</button>
	</div>

	{{/with}}

</div>

<main class="featured">
	{{#each featured}}
	{{>cardFeatured data=this}}
	{{/each}}
</main>
<div class="action">
	{{#each actions}}
	<div class="action_blog">

		<h3 class="action_heading">{{heading}}</h3>
		<a class="button action_button" href="{{url}}">{{text}}</a>
	</div>
	{{/each}}
</div>

<footer class="row footer">
	<div class="col-3">
		{{> logo}}
		<span class="footer_copyright">Copyright 2023-2024</span>
	</div>
	{{#each footer}}
	<div class="col-3">
		<span class="footer_title">{{title}}</span>
		{{>nav list=links isVertical=true}}
	</div>
	{{/each}}
</footer>