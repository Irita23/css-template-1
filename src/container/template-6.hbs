<header class="header">
	<div>
		{{> logo}}
	</div>
	<nav class="header_nav">
		<div class="header_nav_right">
			{{>nav list=header}}
		</div>
	</nav>
</header>
<main class="main">

	{{#with info}}
	<div class="info">

		<h1 class="info_title">{{title}}</h1>
		<p class="info_description">{{description}}</p>

	</div>
	{{/with}}

	{{#with form}}
	<form class="form">


		<div class="form_input_list">
			{{#each inputs}}
			<input class="form_input" type="{{type}}" placeholder="{{placeholder}}" name="{{name}}" id="{{id}}">
			{{/each}}
		</div>
		<div class="form_checkbox">
			<input type="checkbox" name="{{checkbox.name}}" id="{{checkbox.name}}">
			<div></div>
			<label for="{{checkbox.name}}">{{checkbox.label}}</label>
		</div>
		<button type="submit" class="form_button">{{button}}</button>
		<p class="form_info">{{info}}</p>

	</form>
	{{/with}}

</main>

{{#with updates}}
<div class="upd">
	<h1 class="upd_title">{{title}}</h1>

	{{#each list}}
	<div class="icn">
		<img class="list_upd_img" id="{{id}}">
		<div class="list">

			<h4 class="list_nickname">{{nickname}}</h4>
			<p class="list_descr">{{description}}</p>
		</div>
	</div>
	{{/each}}

	{{#with show_all}}
	<a url="{{url}}" class="upd_show">{{text}}</a>
	{{/with}}

</div>
{{/with}}

{{#with expirience}}

<div class="expir">
	
		<h1 class="expir_title">{{title}}<span class="expir_badge">{{badge}}</span></h1>
	
	<div class="list_card">

		{{#each list}}
		<div class="list_group">

			<div class="list_name">{{name}}</div>
			<p class="list_details">{{details}}</p>
		</div>

		{{/each}}
	</div>
</div>
{{/with}}


<footer class="row footer">
	<div>
		{{> logo}}
		<span class="footer_copyright">Copyright 2023-2024</span>
	</div>
	{{#each footer}}
	<div>
		<span class="footer_title">{{title}}</span>
		{{>nav list=links isVertical=true}}
	</div>
	{{/each}}
</footer>